#!/bin/sh

makepath=$HOME/conf/bin/makepath
PATH=$($makepath)

eval $(ssh-agent -t 600)

export GPG_TTY=$(tty)
gpg-agent --daemon

xset m 1 0 

# Map CapsLock to shift
xmodmap -e "keycode 66 = Shift_L NoSymbol Shift_L"
xmodmap -e "keycode 166 = Prior"
xmodmap -e "keycode 167 = Next"


xscreensaver -no-splash &

exec ratpoison

